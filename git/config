[includeIf "gitdir:/Users/bytedance/"]
    path = ~/.config/git/bytedance
[includeIf "gitdir:/home/renan/"]
    path = ~/.config/git/personal
[includeIf "gitdir:dotfiles/"]
    path = ~/.config/git/personal
[alias]
	s = status
	st = status --untracked-files=no
	l = log --all --graph --oneline --decorate
	ll = log --graph --oneline --decorate
[core]
	pager = delta
	excludesfile = ~/.config/git/ignore
[delta]
    navigate = true
    light = false
    line-numbers = true
[diff]
    colorMoved = default
[interactive]
    diffFilter=delta --color-only
[merge]
    conflictstyle = diff3
[merge "ours"]
	driver = true
[merge "theirs"]
	driver = true
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
